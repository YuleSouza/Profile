@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Personal Card </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="vCard & Resume Template" />
    <meta name="keywords" content="vcard, resposnive, resume, personal, card, cv, cards, portfolio" />
    <meta name="author" content="beshleyua" />

    <!-- Load Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">

    <!-- Load CSS -->
    <link rel="stylesheet" href="~/Theme/Card/css/basic.css" />
    <link rel="stylesheet" href="~/Theme/Card/css/layout.css" />
    <link rel="stylesheet" href="~/Theme/Card/css/blogs.css" />
    <link rel="stylesheet" href="~/Theme/Card/css/ionicons.css" />
    <link rel="stylesheet" href="~/Theme/Card/css/magnific-popup.css" />
    <link rel="stylesheet" href="~/Theme/Card/css/animate.css" />
    <link rel="stylesheet" href="~/Theme/Card/css/gradient.css" />

    <!-- Template Colors -->
    <link rel="stylesheet" href="~/Theme/Card/css/template-colors/blue.css" />

    <!--[if lt IE 9]>
    <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Favicons -->
    <link rel="shortcut icon" href="~/Theme/Card/images/favicons/favicon.ico">

</head>

<body>
    <div class="page">
        <!-- Preloader -->
        <div class="preloader">
            <div class="centrize full-width">
                <div class="vertical-center">
                    <div class="spinner">
                        <div class="double-bounce1"></div>
                        <div class="double-bounce2"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Background -->
        <div class="background gradient">
            <ul class="bg-bubbles">
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </div>

        <!-- Container -->
        <div class="container opened" data-animation-in="fadeInLeft" data-animation-out="fadeOutLeft">
            <!-- Header -->
            <header class="header">
                <!-- Menu -->
                <div class="top-menu">
                    <ul>
                        <li class="active">
                            <a href="#about-card">
                                <span class="icon ion-person"></span>
                                <span class="link">About</span>
                            </a>
                        </li>
                        <li>
                            <a href="#resume-card">
                                <span class="icon ion-android-list"></span>
                                <span class="link">Resume</span>
                            </a>
                        </li>
                        <li>
                            <a href="#works-card">
                                <span class="icon ion-paintbrush"></span>
                                <span class="link">Works</span>
                            </a>
                        </li>
                        @*<li>
                                <a href="#blog-card">
                                    <span class="icon ion-chatbox-working"></span>
                                    <span class="link">Comments</span>
                                </a>
                            </li>*@
                        <li>
                            <a href="#contacts-card">
                                <span class="icon ion-at"></span>
                                <span class="link">Contact</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </header>

            <!-- Card - Started -->
            <div class="card-started" id="home-card">
                <!-- Profile -->
                <div class="profile">
                    @{
                        var profile = ViewBag.Person;

                        <!-- Profile Image -->
                        <div class="slide" style="background-image: url(@profile.ImageProfileBackground);"></div>

                        <!-- Profile Photo -->
                        <div class="image">
                            <img src="@profile.ImageProfile" alt="" />
                        </div>

                        <!-- Profile Titles -->
                        <div class="title">
                            @profile.Name
                        </div>

                        <div class="subtitle">
                            @profile.JobTitle
                        </div>
                    }
                    <!-- Profile Socials -->
                    <div class="social">
                        <a target="_blank" href="https://github.com/YuleSouza"><span class="fab fa-github"></span></a>
                        <a target="_blank" href="https://open.spotify.com/user/yule.souza"><span class="fab fa-spotify"></span></a>
                        @*<a target="_blank" href="https://stackoverflow.com/"><span class="fab fa-stack-overflow"></span></a>*@
                    </div>

                    <!-- Profile Buttons -->
                    <div class="lnks">
                        <a href="uploads/Yule.doc" class="lnk" download>
                            <span class="text">Download CV</span>
                            <span class="ion ion-archive"></span>
                        </a>
                        <a href="#" class="lnk discover">
                            <span class="text">Contact Me</span>
                            <span class="arrow"></span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card - About -->
            <div class="card-inner animated active" id="about-card">
                <div class="card-wrap">
                    <!-- About -->
                    <div class="content about">
                        <!-- Title -->
                        <div class="title">About Me</div>
                        <!-- Content -->
                        <div class="row">
                            <div class="col col-d-12 col-t-12 col-m-12 border-line-v">
                                @{
                                    var person = ViewBag.Person;

                                    <div class="text-box">
                                        <p></p>
                                    </div>
                                    <div class="info-list">
                                        <ul>
                                            <li><strong>Age ...</strong> @person.Age</li>
                                            <li><strong>Residence ...</strong> @person.Residence</li>
                                            <li><strong>Freelance ...</strong> @(person.Freelance == true ? " Available" : " Unavailable")</li>
                                            <li><strong>Address ...</strong> @person.Address</li>
                                        </ul>
                                    </div>
                                }
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>

                    <!-- Services -->
                    <div class="content services">
                        <!-- Title -->
                        <div class="title">Interest</div>
                        <!-- Content -->
                        <div class="row service-items border-line-v">

                            <!-- Service Item -->
                            <div class="col col-d-6 col-t-6 col-m-12 border-line-h">
                                <div class="service-item">
                                    <div class="icon"><span class="ion ion-planet"></span></div>
                                    <div class="name">Universe</div>
                                    <p>
                                        Universe and his mysteries.
                                    </p>
                                </div>
                            </div>

                            <!-- Service Item -->
                            <div class="col col-d-6 col-t-6 col-m-12 border-line-h">
                                <div class="service-item">
                                    <div class="icon"><span class="ion ion-music-note"></span></div>
                                    <div class="name">Music</div>
                                    <p>
                                        Good music, good times.
                                    </p>
                                </div>
                            </div>

                            <!-- Service Item -->
                            <div class="col col-d-6 col-t-6 col-m-12 border-line-h">
                                <div class="service-item">
                                    <div class="icon"><span class="ion ion-code"></span></div>
                                    <div class="name">Development</div>
                                    <p>
                                        Ideias that can reach peoples needs.
                                    </p>
                                </div>
                            </div>

                            <!-- Service Item -->
                            <div class="col col-d-6 col-t-6 col-m-12 border-line-h">
                                <div class="service-item">
                                    <div class="icon"><span class="ion ion-earth"></span></div>
                                    <div class="name">Travel</div>
                                    <p>
                                        We need slowdown at some point right?
                                    </p>
                                </div>
                            </div>

                            <div class="clear">
                            </div>
                        </div>

                    </div>

                    <!-- Price Tables -->
                    <div class="content pricing">
                        <!-- Title -->
                        <div class="title">Pricing</div>
                        <!-- Content -->
                        <div class="row pricing-items">

                            <!-- Pricing Item -->
                            <div class="col col-d-6 col-t-6 col-m-12 border-line-v">
                                <div class="pricing-item">
                                    <div class="icon"><i class="ion ion-speedometer speed-basic"></i></div>

                                    @{
                                        var freelancer = ViewBag.PricingSkillFreelancer;

                                        <div class="name">@(freelancer.PricingType == "FL" ? " Freelancer" : " Fulltime")</div>

                                        <div class="amount">
                                            <span class="dollar">R$</span>
                                            <span class="number">@freelancer.Price</span>
                                            <span class="period">@freelancer.Period</span>

                                        </div>
                                    }

                                    <div class="feature-list">
                                        <ul>
                                            @foreach (var freelancerCollection in ViewBag.PricingSkillCollectionFreelancer)
                                            {
                                                <li>@freelancerCollection.PricingSkillDescription</li>
                                            }
                                        </ul>
                                    </div>
                                    <div class="lnks">
                                        <a href="#" class="lnk">
                                            <!--<span class="text">Buy Basic</span>
                                            <i class="ion ion-speedometer speed-basic"></i>-->
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Pricing Item -->
                            <div class="col col-d-6 col-t-6 col-m-12 border-line-v">
                                <div class="pricing-item">
                                    <div class="icon"><i class="ion ion-speedometer"></i></div>
                                    @{
                                        var fulltime = ViewBag.PricingSkillFulltime;
                                        <div class="name">@(fulltime.PricingType == "FT" ? " Fulltime" : " Freelancer")</div>
                                        <div class="amount">
                                            <span class="dollar">R$</span>
                                            <span class="number">@fulltime.Price</span>
                                            <span class="period">@fulltime.Period</span>

                                        </div>
                                    }
                                    <div class="feature-list">
                                        <ul>
                                            @foreach (var fulltimeCollection in ViewBag.PricingSkillCollectionFulltime)
                                            {
                                                <li>@fulltimeCollection.PricingSkillDescription</li>
                                            }
                                        </ul>
                                    </div>
                                    <div class="lnks">
                                        <a href="#" class="lnk">
                                            <!--<span class="text">Buy Pro</span>
                                            <i class="ion ion-speedometer"></i>-->
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!--<div class="clear"></div>-->
                        </div>
                    </div>

                    <!-- Fun Fact -->
                    <div class="content fuct">
                        <!-- Title -->
                        <!--<div class="title">Fun Fact</div>-->
                        <!-- Content -->
                        <div class="row fuct-items">
                            <div class="clear"></div>
                        </div>

                    </div>

                </div>
            </div>

            <!-- Card - Resume -->
            <div class="card-inner" id="resume-card">
                <div class="card-wrap">

                    <!-- Resume -->
                    <div class="content resume">
                        <!-- Title -->
                        <div class="title">Resume</div>

                        <!-- Content -->
                        <div class="row">

                            <!-- Experience -->
                            <div class="col col-d-6 col-t-6 col-m-12 border-line-v">
                                <div class="resume-title border-line-h">
                                    <div class="icon"><i class="ion ion-briefcase"></i></div>
                                    <div class="name">Experience</div>
                                </div>
                                <div class="resume-items">

                                    @foreach (var experience in ViewBag.Experience)
                                    {
                                        <div class="resume-item border-line-h">
                                            <div class="date">@experience.StartDate.Year - @experience.EndDate.Year</div>
                                            <div class="name">@experience.ExperienceTitle</div>
                                            <div class="company">@experience.InstitutionName</div>
                                            <p>
                                                @experience.ExperienceDescription
                                            </p>
                                        </div>
                                    }

                                </div>
                            </div>

                            <!-- Education -->
                            <div class="col col-d-6 col-t-6 col-m-12 border-line-v">
                                <div class="resume-title border-line-h">
                                    <div class="icon"><i class="ion ion-university"></i></div>
                                    <div class="name">Education</div>
                                </div>
                                <div class="resume-items">

                                    @foreach (var education in ViewBag.Education)
                                    {
                                        <div class="resume-item border-line-h">
                                            <div class="date">@education.StartDate.Year - @education.EndDate.Year</div>
                                            <div class="name">@education.InstitutionName</div>
                                            <div class="company">São Paulo</div>
                                            <p>
                                                @education.CourseDescription
                                            </p>
                                        </div>
                                    }

                                </div>
                            </div>

                            <div class="clear"></div>
                        </div>
                    </div>

                    <!-- Skills -->
                    <div class="content skills">
                        <!-- Title -->
                        <div class="title">My Skills</div>

                        <!-- Content -->
                        <div class="row">

                            <!-- Skill Item -->
                            <div class="col col-d-6 col-t-6 col-m-12 border-line-v">
                                <div class="skills-list">

                                    <div class="skill-title border-line-h">
                                        <div class="icon"><i class="ion ion-code"></i></div>
                                        <div class="name">Coding</div>
                                    </div>
                                    <ul>
                                        @foreach (var skill in ViewBag.SkillsCoding)
                                        {
                                            <li class="border-line-h">
                                                <div class="name">@skill.SkillName</div>
                                                <div class="progress">
                                                    <div class="percentage" style="width:@skill.SkillRating%;"></div>
                                                </div>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>

                            <!-- Skill Item -->
                            <div class="col col-d-6 col-t-6 col-m-12 border-line-v">
                                <div class="skills-list">
                                    <div class="skill-title border-line-h">
                                        <div class="icon"><i class="ion ion-code-working"></i></div>
                                        <div class="name">Others</div>
                                    </div>
                                    <ul>
                                        @foreach (var skill in ViewBag.SkillsOthers)
                                        {
                                            <li class="border-line-h">
                                                <div class="name">@skill.SkillName</div>
                                                <div class="progress">
                                                    <div class="percentage" style="width:@skill.SkillRating%;"></div>
                                                </div>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>

                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card - Works -->
            <div class="card-inner" id="works-card">
                <div class="card-wrap">

                    <!-- Works -->
                    <div class="content works">

                        <!-- Title -->
                        <div class="title">My Works</div>

                        <!-- Filters -->
                        <div class="filter-menu filter-button-group">
                            <div class="f_btn active">
                                <label><input type="radio" name="fl_radio" value="grid-item" />All</label>
                            </div>
                            @*<div class="f_btn">
                                    <label><input type="radio" name="fl_radio" value="design" />Design</label>
                                </div>*@
                        </div>

                        <!-- Content -->
                        <div class="row grid-items border-line-v">

                            @foreach (var projectWork in ViewBag.ProjectWorkCollection)
                            {
                                <!-- Work Item Design -->
                                <div class="col col-d-6 col-t-6 col-m-12 grid-item design border-line-h">
                                    <div class="box-item">
                                        <div class="image">
                                            <a href="#popup-@projectWork.ProjectWorkEntityID" class="has-popup-media">
                                                <img src="@projectWork.ImagePath" alt="" />
                                                <span class="info">
                                                    <span class="ion ion-images"></span>
                                                </span>
                                            </a>
                                        </div>
                                        <div class="desc">
                                            <a href="#popup-@projectWork.ProjectWorkEntityID" class="name has-popup-media">@projectWork.Title</a>
                                            <div class="category">@projectWork.SubTitle</div>
                                        </div>
                                        <div id="popup-@projectWork.ProjectWorkEntityID" class="popup-box mfp-fade mfp-hide">
                                            <div class="content">
                                                <div class="image">
                                                    <img src="@projectWork.ImagePath" alt="">
                                                </div>
                                                <div class="desc">
                                                    <div class="post-box">
                                                        <h1>@projectWork.Title</h1>
                                                        <div class="blog-detail">@projectWork.SubTitle</div>
                                                        <div class="blog-content">
                                                            <p>
                                                                @projectWork.ProjectDescription
                                                            </p>
                                                        </div>
                                                        <a href="@projectWork.ExternalUrl" target="_blank" class="button">
                                                            <span>View Project</span>
                                                            <span class="arrow"></span>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card - Comments -->
            <div class="card-inner blog" id="blog-card">
                <div class="card-wrap">
                    <!-- Blog -->
                    <div class="content blog">
                        <!-- Content -->
                        <div class="row">
                            <div class="col col-d-12 col-t-12 col-m-12">
                                <!-- Comments Form -->
                                <div class="content contacts">
                                    <!-- Title -->
                                    <div class="title">Please Leave Your Comment</div>
                                    <!-- Content -->
                                    <div class="row">
                                        <div class="col col-d-12 col-t-12 col-m-12 border-line-v">
                                            <div class="contact_form">
                                                <form id="comment-form">
                                                    <div class="row">
                                                        <div class="col col-d-12 col-t-12 col-m-12">
                                                            <div class="group-val">
                                                                <input type="text" name="title" placeholder="Title" />
                                                            </div>
                                                        </div>
                                                        <div class="col col-d-12 col-t-12 col-m-12">
                                                            <div class="group-val">
                                                                <textarea name="commentDescription" placeholder="Your Comment"></textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="align-left">
                                                        <a href="#" class="button" onclick="$('#comment-form').submit(); return false;">
                                                            <span class="text">Send Comment</span>
                                                            <span class="arrow"></span>
                                                        </a>
                                                    </div>
                                                </form>
                                                <div class="alert-success">
                                                    <p>Thanks, your comment is sent successfully.</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="clear"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col col-d-12 col-t-12 col-m-12">
                                <div class="box-item">

                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>

                        <div class="title">
                            Latest Comments
                        </div>
                        <div class="row border-line-v">
                            @{
                                var comments = ViewBag.Comments;
                            }

                            <!-- Blog Item -->
                            @{ for (int i = 0; i < @comments.Count; i++)
                                {
                                    <div class="col col-d-12 col-t-12 col-m-12 border-line-h">
                                        <div class="box-item">
                                            <span class="info">
                                                <span class="ion ion-document-text"></span>
                                            </span>
                                            <span class="date"><strong>@comments[i].DayComment</strong>@comments[i].MonthComment</span>

                                            <div class="desc">
                                                <a href="blog-post.html" class="name"> @comments[i].Title</a>
                                                <div class="category">@comments[i].CommentDescription</div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="clear"></div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!--  Card - Contacts -->
            <div class="card-inner contacts" id="contacts-card">
                <div class="card-wrap">
                    <!-- Contacts Info -->
                    <div class="content contacts">
                        <!-- Title -->
                        <div class="title">Get in Touch</div>
                        <!-- Content -->
                        <div class="row">
                            <div class="col col-d-12 col-t-12 col-m-12 border-line-v">
                                @*<div class="map" id="map"></div>*@
                                <div class="info-list">
                                    @{
                                        var contact = ViewBag.Person;
                                        <ul>
                                            <li><strong>Address ...</strong> @contact.Address</li>
                                            <li><strong>Email ...</strong> @contact.Email</li>
                                            <li><strong>Phone ...</strong> @contact.Phone</li>
                                            <li><strong>Freelance ...</strong> @(contact.Freelance == true ? " Available" : " Unavailable")</li>
                                        </ul>
                                    }
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div class="content contacts">
                        <!-- Title -->
                        <div class="title">It's Easy</div>
                        <!-- Content -->
                        <div class="row">
                            <div class="col col-d-12 col-t-12 col-m-12 border-line-v">
                                <div class="contact_form">
                                    <form id="contact-form">
                                        <div class="row">
                                            <div class="col col-d-12 col-t-12 col-m-12">
                                                <div class="group-val">
                                                    <input type="text" name="name" placeholder="Full Name" />
                                                </div>
                                            </div>
                                            <div class="col col-d-12 col-t-12 col-m-12">
                                                <div class="group-val">
                                                    <input type="text" name="email" placeholder="Email Address" />
                                                </div>
                                            </div>
                                            <div class="col col-d-12 col-t-12 col-m-12">
                                                <div class="group-val">
                                                    <textarea name="message" placeholder="Your Message"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="align-left">
                                            <input type="submit" value="Send Message" class="button arrow" style="cursor:pointer;">
                                        </div>
                                    </form>
                                    <div class="alert-success">
                                        <p>Thanks, your message is sent successfully.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery Scripts -->
    <script src="~/Theme/Card/js/jquery.min.js"></script>
    <script src="~/Theme/Card/js/jquery.min.js"></script>
    <script src="~/Theme/Card/js/jquery.validate.js"></script>
    <script src="~/Theme/Card/js/jquery.magnific-popup.js"></script>
    <script src="~/Theme/Card/js/imagesloaded.pkgd.js"></script>
    <script src="~/Theme/Card/js/masonry.pkgd.js"></script>
    <script src="~/Theme/Card/js/masonry-filter.js"></script>
    <script src="~/Theme/Card/js/jquery.slimscroll.js"></script>
    <!-- Google Map API -->
    <!-- Main Scripts -->
    @*<script src="@ViewBag.CryptoGoogleMapsUrl&callback=initMap"></script>*@
    <script src="~/Theme/Card/js/scripts.js"></script>
</body>
</html>
